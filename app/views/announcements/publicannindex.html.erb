<!-- Page Content -->
    <div class="container">
        <p id="notice"><%= notice %></p>

        <!-- Page Heading/Breadcrumbs -->
        
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>

                    <h2 class="intro-text text-center">HHSYC
                        <strong>Announcement and Events</strong>
                    </h2>

                    <hr>
                    <div class="row">
            <div class="col-lg-12">
                <!-- <h1 class="page-header">HHSYC - Administrators View -->
                    <!-- <small>founded in 2001</small> -->
                <!-- </h1> -->
                <ol class="breadcrumb">
                    <li><%=link_to 'Back', :back %>
                </ol>
            </div>
        </div>
                </div>
                <% @announcements.each do |announcement| %>
                <div class="col-lg-12 text-center">
                    
                    <%= image_tag(announcement.image.url(:medium), class: "img-responsive img-border center-block img-rounded img-full") %>
                    <h2><%= announcement.ann_title %>
                        <br>
                        <small><%= announcement.created_at.strftime("%b %d, %Y - %I:%M %p") %></small>
                    </h2>
                    <p class="h2para"><%= truncate(announcement.ann_body, length: 300, omission: "... (continued)") %></p>
                    <%= link_to "View Details", announcement_path(announcement), :class => "btn btn-default" %><% end %>
                    <hr>
                </div>
                
                <div class="col-lg-12 text-center">
                    <ul class="pager">
                        <li class="previous"><a href="#">&larr; Newer</a>
                        </li>
                        <li class="next"><a href="#">Older &rarr;</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <!-- /.row -->

        <hr class="featurette-divider">

    <nav>
      <ul class="paginate-block pagination-sm">
        <li><%= will_paginate @announcements, renderer: BootstrapPagination::Rails, next_label: "Older", previous_label: "Newer", page_links: false %>
        </li>
      </ul>
    </nav>