

 <!-- Page Content -->
    <div class="container">
      <p id="notice"><%= notice %></p>
        <!-- Page Heading/Breadcrumbs -->
        <% if admin_signed_in? %>
        <%= render 'shared/admin_whitebar' %>
        <% else %>
        <%= render 'shared/public_whitebar' %>
        <% end %>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">
            <!-- Sidebar Column -->
              <% if admin_signed_in? %>
                <%= render 'shared/sidebar_admin' %>
                <% else %>
                <%= render 'shared/sidebar_public' %>
              <% end %>
            <!-- Content Column -->
            <div class="col-md-9">
              <div class="stylestatic">
                <h3>Announcements Listing</h3>
                <table>
                  <thead>
                    <tr>
                      <th colspan="3"></th>
                    </tr>
                  </thead>

                    <tbody>
                      <% @announcements.each do |announcement| %>
                        <tr>
                          <td><%= link_to announcement.ann_title, announcement %></td>
                          <td><%= announcement.created_at.strftime("%b %d, %Y - %I:%M %p") %></td>
                          <td><%= link_to 'View', announcement %></td>
                          <% if admin_signed_in? %>
                          <td><%= link_to 'Edit', edit_announcement_path(announcement) %></td>
                          <td><%= link_to 'Delete', announcement, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
                        </tr>
                      <% end %>
                    </tbody>
                </table>
                <% if admin_signed_in? %>
                <%= link_to 'New Event Post', new_announcement_path %>
                <% end %>
              </div>  
            </div>
        </div>
        <!-- /.row -->

        <hr class="featurette-divider">


