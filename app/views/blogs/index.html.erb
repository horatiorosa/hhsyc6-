<!-- Page Content -->
    <div class="container">
        <p id="notice"><%= notice %></p>
        <% if admin_signed_in? %>
        <!-- Page Heading/Breadcrumbs -->
        <%= render 'shared/admin_whitebar' %>
        <% else %>
        <%= render 'shared/public_whitebar' %>
        <% end %>
        <!-- /.row -->

        <!-- Content Row -->
        <div class="row">
            <!-- Sidebar Column -->
            <% if admin_signed_in? %>
                <%= render 'shared/sidebar_admin' %>
                <% else %>
                <%= render 'shared/sidebar_public' %>
            <% end %>
            <!-- Content Column -->
            <div class="col-md-9">
              <div class="stylestatic">
                <h3>Blogs Listing</h3>
                <table id="blg_list">
                  <!-- <thead>
                    <tr>
                      <th colspan="3"></th>
                    </tr>
                  </thead> -->

                    <tbody>
                      <% @blogs.each do |blog| %>
                        <tr class="blg_tbl">
                          <td class="blg_tbl_title"><%= link_to blog.blog_title, blog %></td>
                          <td class="blg_tbl_date"><%= blog.created_at.strftime("%b %d, %Y - %I:%M %p") %></td>
                          <td class="blg_tbl_view"><%= link_to 'View', blog %></td>
                          <% if admin_signed_in? %>
                          <td class="blg_tbl_edit"><%= link_to 'Edit', edit_blog_path(blog) %></td>
                          <td class="blg_tbl_delete"><%= link_to 'Delete', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
                        </tr>
                      <% end %>
                    </tbody>
                </table>
                <%= link_to 'New Blog Post', new_blog_path %>
              </div>  
            </div>
        </div>
        <!-- /.row -->

        <hr class="featurette-divider">


