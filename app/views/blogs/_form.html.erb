<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prevented this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.file_field :image, placeholder: "Upload a photo here (or leave blank to upload an image later" %>
    <%= f.hidden_field :image_cache %>
    <%= f.text_field :blog_title, placeholder: "Enter your announcement or event title here" %>
    <%= f.text_area :blog_body, placeholder: "Enter your announcement or event details here", size: "50x20" %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
